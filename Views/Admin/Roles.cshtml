@using Microsoft.AspNetCore.Identity;
@model List<IdentityRole>

<div class="container">
    <form method="post" asp-action="AddRole" asp-controller="Admin">
        <div class="row">
            <div class="col-10">
                <input name="RoleName" />
            </div>
            <div class="col-2">
                <input type="submit" value="Add Role" />
            </div>
        </div>
    </form>
    @foreach(IdentityRole role in Model)
            {
<div class="row">
    <div class="col-6">
        <p>@role.Name</p>
    </div>
    <div class="col-3">
        <a asp-action="DeleteRole" asp-controller="Admin" asp-route-id="@role.Id" >Delete</a>
    </div>
    <div class="col-3">
        <a asp-action="UsersInRole" asp-controller="Admin" asp-route-id="@role.Name">Users with this role</a>
    </div>
</div>
            }
</div>